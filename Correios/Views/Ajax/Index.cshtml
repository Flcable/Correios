
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Scripts.Render("~/bundles/jquery") <!-- Adicionar bibliotecas do Jquery-->

    <script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
    <script type="text/javascript">
        function atualizarData() {
            $.ajax(
                {
                    type: 'GET',
                    url: '/Ajax/dataHoraAtual',
                    dataType: 'html',
                    cache: false,
                    async: true,
                    success: function (dados) {
                        $('#dataHora').html(dados);
                    }
                });

        }

        $(document).ready(function () {
            setInterval(atualizarData, 500);
        });

    </script>

</head>
<body>
    <div>
        <p id="dataHora"></p>
        <input id="btnAtualizar" type="button" value="atualizar" onclick="atualizarData();" />
        <input type="text" />
        <input type="submit" />
    </div>
</body>
</html>
